extends ../layout/main

block main
    section(class='top-banner js_img-lazy' data-bg='url(/img/autumn.jpg)')
        .top-banner__title Заголовок баннера

    section#js_app-product-list.container.catalog-box(itemtype='https://schema.org/ItemList' itemscope)
        h1.text-center Доставка цветов по Москве и России

        template(v-if='products.data')
            .grid(v-if='products.data.length')
                .m-grid__item-1-2.grid__item-1-4(v-for='(product, index) in products.data' :key='product.id')
                    .product-card-box.js_product-card__box_hover
                        .product-card
                            div {{ product.index }}

                            div {{ product.id }}

            div(v-else class='text-center') Товаров не найлено

        if products.data.length
            .grid(v-else)
                each product, index in products.data
                    .m-grid__item-1-2.grid__item-1-4
                        include includes/product
        else
            div(class='text-center') Товаров не найлено

block styles
    link(rel='stylesheet' href='/dist/site/fm/fm.css')

block scripts
    script(defer src='/dist/site/fm/fm-vue.js')